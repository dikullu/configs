#!/bin/bash

sysfs="/sys/class/backlight/backlight_lcd"
level=`cat ${sysfs}/brightness`

if [ "$level" == "16" ] || [ "$level" == "15" ]; then
    echo "16" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "14" ]; then
    echo "15" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "13" ]; then
    echo "14" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "12" ]; then
    echo "13" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "11" ]; then
    echo "12" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "10" ]; then
    echo "11" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "9" ]; then
    echo "10" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "8" ]; then
    echo "9" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "7" ]; then
    echo "8" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "6" ]; then
    echo "7" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "5" ]; then
    echo "6" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "4" ]; then
    echo "5" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "3" ]; then
    echo "4" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "2" ]; then
    echo "3" > /sys/class/backlight/backlight_lcd/brightness
elif [ "$level" == "1" ]; then
    echo "2" > /sys/class/backlight/backlight_lcd/brightness
fi
